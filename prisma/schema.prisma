generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int     @id @default(autoincrement())
  name      String?
  email     String? @unique
  phone     String? @unique
  password  String
  role      String  // "student" | "driver"
}


model Feedback {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String
  createdAt DateTime @default(now())
}

model MenuDay {
  id       Int         @id @default(autoincrement())
  date     DateTime
  mealType String
  items    MenuItem[]
}

model MenuItem {
  id      Int     @id @default(autoincrement())
  name    String
  menuDay MenuDay @relation(fields: [menuDayId], references: [id])
  menuDayId Int
}

model Shuttle {
  id        Int      @id @default(autoincrement())
  time      String
  route     String
  driver    String
  contact   String
}

